rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function
    function isAdmin() {
      return request.auth != null && (
        request.auth.token.email == 'rhys@tvmenuswvc.com' || 
        request.auth.token.email == 'rhyshaney@gmail.com'
      );
    }

    // Profile Photos: Public Read, Owner Write
    match /profile_photos/{fileName} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Theme Backgrounds: Public Read, ADMIN Write
    match /theme-backgrounds/{fileName} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
