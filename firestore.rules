rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- HELPER FUNCTIONS ---
    function isSignedIn() { return request.auth != null; }
    function isOwner(userId) { return isSignedIn() && request.auth.uid == userId; }
    function isAdmin() {
      return isSignedIn() && (
        request.auth.token.email == 'rhys@tvmenuswvc.com' || 
        request.auth.token.email == 'rhyshaney@gmail.com'
      );
    }

    // --- USER DATA ---
    match /users/{userId} {
      allow read, write: if isOwner(userId) || isAdmin();
    }
    
    match /user_secrets/{userId} {
      allow read, write: if isOwner(userId);
    }

    // --- THE IRON VAULT (WALLET) ---
    match /wallets/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      // Allow creation only with 0 balance
      allow create: if isOwner(userId) && request.resource.data.balance == 0;
      // Allow update ONLY if balance DECREASES (Spending) or if Admin
      allow update: if isAdmin() || (
        isOwner(userId) && 
        request.resource.data.balance < resource.data.balance
      );
    }

    // --- PUBLIC PROFILES ---
    match /public_profiles/{profileId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    // --- COMPLIMENTS (CARDS) ---
    match /compliments/{complimentId} {
      allow read: if true;
      allow create: if isSignedIn();
      // Allow updates by Sender, Recipient, or the new Claimer
      allow update: if isSignedIn() && (
        resource.data.sender_uid == request.auth.uid || 
        resource.data.recipient_uid == request.auth.uid || 
        request.resource.data.claimer_uid == request.auth.uid
      );
      allow delete: if isSignedIn() && resource.data.sender_uid == request.auth.uid || isAdmin();
    }

    match /compliment_secrets/{secretId} {
      allow read, write: if isSignedIn() && (
        resource.data.sender_uid == request.auth.uid ||
        request.resource.data.sender_uid == request.auth.uid
      );
    }

    // --- MESSAGING ---
    match /chats/{chatId} {
      allow read, write: if isSignedIn() && (
        request.auth.uid in resource.data.participants ||
        request.auth.uid in request.resource.data.participants
      );
      match /messages/{messageId} {
        allow read, write: if isSignedIn();
      }
    }

    match /connections/{connectionId} {
      allow read, write: if isSignedIn() && (
        request.auth.uid in resource.data.participants ||
        request.auth.uid in request.resource.data.participants
      );
    }

    // --- ASSETS ---
    match /themes/{themeId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // --- ADS (BUSINESS) ---
    match /ads/{adId} {
      allow read: if true;
      // Anyone signed in can Create
      allow create: if isSignedIn();
      // Only the Owner (by Email) or Admin can Update/Delete
      allow update, delete: if (resource.data.owner_email == request.auth.token.email) || isAdmin();
    }

    // --- COMMERCE ---
    match /transactions/{txnId} {
      allow read: if isOwner(resource.data.uid);
      allow create: if isOwner(request.resource.data.uid);
    }
    match /orders/{orderId} {
      allow read: if isOwner(resource.data.uid) || isAdmin();
      allow create: if isOwner(request.resource.data.uid);
      allow update: if isAdmin();
    }
  }
}
